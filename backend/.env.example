# Kotak API (for server-side calls; keep empty if frontend sends access_token)
# ACCESS_TOKEN=

# Server
PORT=4000
# Allow frontend origin (React dev server)
CORS_ORIGIN=http://localhost:5173
# Logging: LOG_LEVEL=debug|info|warn|error (default: info), LOG_FORMAT=pretty for readable lines
# LOG_LEVEL=info
# LOG_FORMAT=pretty

# MongoDB (optional for most features; required for NSE historical sync and swing backtest)
# MONGODB_URI=mongodb://localhost:27017/bot-ai

# Zerodha Kite Connect (required for /api/kite/login-url; get keys from kite.zerodha.com)
# KITE_API_KEY=your_api_key
# KITE_API_SECRET=your_api_secret
# KITE_REDIRECT_URI=http://localhost:4000/api/kite/callback
# FRONTEND_URL=http://localhost:5173
